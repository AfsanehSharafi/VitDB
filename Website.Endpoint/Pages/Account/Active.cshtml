@page
@model ActiveModel
@{
    ViewData["Title"] = "فعال‌سازی حساب کاربری";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">فعال‌سازی حساب کاربری</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label>کد فعال‌سازی</label>
                            <input asp-for="ActivationCode" class="form-control" placeholder="کد فعال‌سازی را وارد کنید" />
                            <span asp-validation-for="ActivationCode" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">فعال‌سازی</button>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
